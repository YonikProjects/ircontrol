{
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "assets": "out/*.exe"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": [
      "npm run make",
      "xcopy out/make/squirrel.windows/x64/*.exe /out"
    ],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
