{
  "name": "icontrol",
  "productName": "iControl",
  "version": "1.0.0",
  "description": "Control Projectors over Serial",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "npm i && electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src",
    "test": "jest",
    "upload": "git add . && git commit -m \"Fixed\" && npm run git:sync",
    "download": "git pull origin main",
    "git:commit": "git-cz",
    "git:sync": "git pull --rebase origin main && git push origin main"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "cdima-mac",
  "license": "MIT",
  "dependencies": {
    "chota": "^0.9.2",
    "electron-squirrel-startup": "^1.0.0",
    "serialport": "^10.5.0",
    "simple-json-db": "^2.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "23.1.3",
    "eslint": "^8.36.0",
    "jest": "^29.5.0"
  }
}
